<script>
// Countdown Timer
let birthday = new Date("Feb 9, 2026 00:00:00").getTime();
let countdown = setInterval(function() {
    let now = new Date().getTime();
    let distance = birthday - now;
    let days = Math.floor(distance / (1000 * 60 * 60 * 24));
    let hours = Math.floor((distance % (1000 * 60 * 60 * 24))/(1000*60*60));
    let minutes = Math.floor((distance % (1000 * 60 * 60))/(1000*60));
    let seconds = Math.floor((distance % (1000 * 60))/1000);
    document.getElementById("countdown").innerHTML = `Countdown: ${days}d ${hours}h ${minutes}m ${seconds}s`;
    if(distance < 0){
        clearInterval(countdown);
        document.getElementById("countdown").innerHTML = "üéâ It's Birthday Time! üéâ";
    }
}, 1000);

// Show Romantic Message
document.getElementById("messageBtn").onclick = function(){
    document.getElementById("romanticMessage").style.display = "block";
};
</script>

